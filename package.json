{
  "name": "oasis",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "engineStrict": true,
  "engines": {
    "node": "24"
  },
  "packageManager": "yarn@4.10.3",
  "scripts": {
    "test": "yarn workspaces foreach -Ap --no-private run test --run",
    "lint": "biome check",
    "lint:ci": "biome ci",
    "build:app": "yarn workspace example-app build",
    "build:lib": "yarn workspaces foreach -At --no-private run build",
    "type-check": "yarn workspaces foreach -Ap run type-check",
    "prepare": "husky"
  },
  "workspaces": [
    "libs/*",
    "example-app"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome format --write --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched"
    ]
  }
}
